.container{
  padding: 0rpx;
}
.zero{
  color: crimson;
}
.listItem{
  width: 100%;
  border-bottom: 1px solid rgb(216, 211, 211);
}
.listItem .itemHeader{
  display: flex;
  align-items: center;
}
.listItem .headering image{
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  margin: 24rpx;
}
.listItem .itemHeader .username{
  font-size: 28rpx;
}
.listItem .itemHeader .M{
  font-size: 24rpx;
  color: rgb(22, 186, 237);
}
.listItem .itemHeader .W{
  font-size: 24rpx;
  color: rgb(220, 40, 184);
}
.listItem .itemContent{
  padding: 0 24rpx 24rpx;
}
.listItem .itemContent image{
  width: 100%;
}

#zf_button{
  background-image: url("data:image/png;base64,");
  background-position:center;
  background-repeat:no-repeat;
  background-size:contain;
  width: 40rpx;
  height: 40rpx;
}
.heart {
  width: 40rpx;
  height: 40rpx;
  animation: beat3 0.2s ease;
}
.heart-center{
  width: 40rpx;
  height: 40rpx;
  animation: beat2 0.2s ease;
}
.heart-active{
  width: 40rpx;
  height: 40rpx;
  animation: beat 0.5s ease;
}

@keyframes beat {
  0% {
    transform: scale(1);
  }
  40% {
    transform: scale(0);
  }
  80% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}
@keyframes beat2 {
  0% {
    transform: scale(1);
  }
  100% {
    transform: scale(0.7);
  }
}
@keyframes beat3 {
  0% {
    transform: scale(0.7);
  }
  100% {
    transform: scale(1);
  }
}

.add_icon{
  position: fixed;
  width:40px;
  height:40px;
  bottom: 30px;
  right: 20px; 
}
